interface IsRAI {
    function balanceOf(address account) external view returns (uint256);
    function transfer(address recipient, uint256 amount) external returns (bool);
    function transferFrom(address sender, address recipient, uint256 amount) external returns (bool);
    function burn(address account, uint256 amount) external;
}

contract ReleasePool is Ownable {
    using SafeMath for uint256;
    IERC20 public sRAI;
    address public stakingContract;

    mapping(address => uint256) public releasingAmount; // User => Amount of sRAI being released

    event ReleaseStarted(address indexed user, uint256 amount, uint256 burnAmount, uint256 releaseLevel);
    event ReleaseClaimed(address indexed user, uint256 amount);

    constructor(address _sRAI) Ownable(msg.sender) {
        require(_sRAI != address(0), "sRAI address cannot be zero");
        sRAI = IERC20(_sRAI);
    }

    function setStakingContract(address _stakingContract) external onlyOwner {
        require(_stakingContract != address(0), "Staking contract address cannot be zero");
        stakingContract = _stakingContract;
    }

    modifier onlyStakingContract() {
        require(msg.sender == stakingContract, "Only the staking contract can call this function");
        _;
    }

    /**
     * @notice Start the release process for a user's sRAI.
     * @param _user The address of the user unstaking.
     * @param _amount The amount of sRAI to release.
     * @param _burnAmount The amount of sRAI to burn (optional logic).
     * @param _releaseLevel An indicator for the release tier (optional logic).
     */
    function startRelease(address _user, uint256 _amount, uint256 _burnAmount, uint256 _releaseLevel) external onlyStakingContract {
        require(_amount > 0, "Release amount must be greater than zero");
        releasingAmount[_user] = releasingAmount[_user].add(_amount);

        // Optional logic: Burn a portion of the released sRAI
        if (_burnAmount > 0) {
            IsRAI(address(sRAI)).burn(address(this), _burnAmount);
            emit ReleaseStarted(_user, _amount, _burnAmount, _releaseLevel);
        } else {
            emit ReleaseStarted(_user, _amount, 0, _releaseLevel);
        }
    }

    /**
     * @notice Claim the released sRAI.
     * @param _amount The amount of sRAI to claim.
     */
    function claimRelease(address _user, uint256 _amount) external {
        require(_amount > 0, "Claim amount must be greater than zero");
        require(releasingAmount[_user] >= _amount, "Insufficient releasing amount");

        releasingAmount[_user] = releasingAmount[_user].sub(_amount);
        bool success = sRAI.transfer(_user, _amount);
        require(success, "sRAI transfer failed");

        emit ReleaseClaimed(_user, _amount);
    }

    /**
     * @notice View the amount of sRAI currently being released for a user.
     * @param _user The address of the user.
     * @return uint256 The amount of sRAI being released.
     */
    function getReleasingAmount(address _user) public view returns (uint256) {
        return releasingAmount[_user];
    }
    enum CONTRACTS { SRAI }

    /**
        @notice sets the contract address for LP staking
        @param _contract address
    */
    function setContract( CONTRACTS _contract, address _address ) external onlyOwner() {
        if( _contract == CONTRACTS.SRAI ) { // 0
            sRAI = IERC20(_address); 
        } 
    }

}